<div class="wrap main_warp">
  <%- partial('../layout/common/navbar_top_home.ejs') %><!-- navbartop layout-->
  <div class="content_view col-md-9" id="signupformmain">
    <div class="col-md-9 col-md-offset-1 signupform">
      <div class="col-md-9" id="mainheader">
        <h1>Create Your Staff Account</h1>
      </div>
      <div class="col-md-10 well signFormMain">

        <div class="row">
          <form name="registration" id="registration">
            <div class="col-md-12">


              <div class="form-group">
                <label>Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter Full Name Here.." class="form-control">
              </div>

              <div class="form-group">
                <label>Email Address</label>
                <input type="text" id="email" name="email" placeholder="Enter Email Address Here.."
                       class="form-control">
              </div>


              <div class="form-group">
                <label>User Type</label>
                <select id="type" name="type" class="form-control">
                  <option value="">Select User Type</option>
                  <option value="1">Admin</option>
                  <option value="3">Tutor</option>
                  <option value="4">System Users</option>
                </select>

                <div class="help-block"></div>
              </div>

              <div class="form-group">
                <label>Country</label>
                <select id="country_type" name="country_type" class="form-control">
                  <option value="">Select Country</option>
                  <% for(var i = 0; i < country.length; i++) { %>
                  <option value=<%= country[i].id %>><%= country[i].country_name %></option>
                  <% } %>
                </select>


              </div>

              <div class="form-group">
                <label>Phone Number</label>
                <input type="text" id="tel" name="tel" placeholder="Enter Phone Number Here.." class="form-control">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" id="pwd" name="pwd" placeholder="Enter Password Here.." class="form-control">
              </div>
              <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" id="confirmpwd" name="confirmpwd" placeholder="Enter Password agai.."
                       class="form-control">
              </div>

              <div id="signup_msg">
              </div>


              <%- partial('../layout/common/loader.ejs') %>

              <button type="button" id="create" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% block('localScripts', '<script src="js/fontend/users.js"></script>') %>
<%- partial('../layout/common/footer.ejs') %>
