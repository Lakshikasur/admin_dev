<div class="wrap">
  <%- partial('../layout/common/navbar_top.ejs') %><!-- navbartop layout-->
  <%- partial('../layout/common/sidebar.ejs') %><!-- sidebar layout-->
  <div class="content_view">
    <ul class="breadcrumb">
      <li><a href="/dashboard?auth=<%= auth %>">Dashboard</a></li>
      <li><a href="/resource/init?auth=<%= auth %>">Resource</a></li>
    </ul>
    <h1 style="margin-top: 0;">
      Upload
      <small>upload resources (<%= section[0].name %>)</small>

    </h1>


    <div class="col-md-10 col-md-offset-1 well formpackage" ng-controller="resourceSummeryController">
      <div class="row">

        <div class="col-md-6 col-md-offset-3">
          <h2 style="margin-top: 0;">
          </h2>
        </div>
        <form name="uploadresourses" id="uploadresourses">
          <div class="col-md-12">

            <div class="row">
              <div class="form-group col-md-6">
                <label>Module</label>
                <select id="m_type" name="m_type" class="form-control">
                  <option value="">Select Module</option>
                  <% for(var i = 0; i < module.length; i++) { %>
                  <option value=<%= module[i].module_id %>><%= module[i].name %></option>
                  <% } %>
                </select>

                <div class="help-block"></div>
              </div>
              <div class="form-group col-md-6">
                <label>Unit</label>
                <select id="mu_type" name="mu_type" class="form-control">
                  <option value="">Select Unit</option>

                </select>

                <div class="help-block"></div>
              </div>

            </div>

            <div class="row">


              <div class="form-group col-md-6">
                <label>Resourse Name</label>
                <input type="text" id="m_des" name="m_des" class="form-control"
                       placeholder="Enter Resourse Name Here..">

                <div class="help-block"></div>
              </div>

              <div class="form-group col-md-6">
                <label>Recourse Type</label>
                <select id="r_type" name="r_type" class="form-control">
                  <option value="">Select Resource Type</option>
                  <% for(var i = 0; i < resource.length; i++) { %>
                  <option value=<%= resource[i].id %>><%= resource[i].name %></option>
                  <% } %>

                </select>

                <div class="help-block"></div>
              </div>


            </div>

            <div class="row">

              <div class="form-group  col-md-6">
                <label>Sub-Topic<span class="glyphicon glyphicon-plus-sign addhead"></span></label>
                <select class="js-example-basic-single form-control" id="r_head" name="r_head">
                  <option value="">Select Resource Sub-Topic</option>
                  <% for(var i = 0; i < head.length; i++) { %>
                  <option value=<%= head[i].id %>><%= head[i].name %></option>
                  <% } %>
                </select>
                <div class="help-block"></div>
              </div>

              <div class="form-group  col-md-6">
                <label>Tags<span class="glyphicon glyphicon-plus-sign addtag"></span></label>
                <select class="js-example-basic-multiple form-control" id="r_tag" name="r_tag" multiple="multiple">
                  <option value="">Select Resource Tag</option>
                  <% for(var i = 0; i < tag.length; i++) { %>
                  <option value=<%= tag[i].id %>><%= tag[i].name %></option>
                  <% } %>

                </select>
                <div class="help-block"></div>
              </div>


            </div>

            <div class="row">
              <div class="form-group col-md-12">
                <label>Summary <span ng-cloak>( maximum (Characters:160))</span></label>
                <div text-angular ng-model="data.resourseSummery"  ta-max-text="160" ng-cloak></div>

                <div class="help-block"></div>
              </div>
            </div>


            <div class="form-group">
              <div class="fileUploadSec">
              <label>Select File: <input type="file" name="UploadFile" id="txtUploadFile"
                                         class="homereportupload"/></label>
              <div class="progress">
                <div id='_progress' class="progress-bar progress-bar-striped active">
                </div>

              </div>
              </div>
              <div class="fileUploadUrlSec hide">

                <div class="form-group">
                  <label>Enter Video Url: </label>
                  <textarea name="url_link" class="form-control" id="url_link" placeholder="Enter video url here..."></textarea>
                </div>

              </div>
              <div class="col-md-12 hide" id="resourseSummeryData" ng-bind-html="data.resourseSummery"></div>
              <div id="psucsees_msg">
              </div>
              <button type="button" id="uploadresources" class="btn btn-primary">Upload</button>
            </div>
            <input type='hidden' name='_csrf' value='<%= _csrf %>'>
          </div>
        </form>
      </div>


      <%- partial('../layout/common/loader.ejs') %>
    </div>


  </div>

</div>


<%- partial('../layout/common/footer.ejs') %><!-- footer layout-->

<% block('localScripts', '<script src="../js/fontend/fileupload.js"></script>') %>
